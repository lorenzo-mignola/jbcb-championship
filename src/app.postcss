@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

@layer components {
  .base-judoka {
    @apply my-2 rounded-md;
  }
  .judoka-white {
    @apply base-judoka bg-gray-100 text-black dark:bg-gray-200 dark:text-black;
  }

  .judoka-blue {
    @apply base-judoka bg-blue-800 text-white dark:bg-blue-800 dark:text-white;
  }
}
