{
  "name": "jbcb-championship",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:emulator": "export FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 && vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "test": "vitest",
    "test:watch": "export CI=true && vitest --watch=true",
    "test:ui": "vitest --ui --watch=true",
    "test:coverage": "vitest --coverage",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod",
    "firestore": "firebase emulators:start --import ./data --export-on-exit ./data",
    "firestore:export": "firebase emulators:export ./data"
  },
  "devDependencies": {
    "@skeletonlabs/skeleton": "2.9.0",
    "@skeletonlabs/tw-plugin": "0.3.1",
    "@sveltejs/adapter-auto": "^3.1.1",
    "@sveltejs/kit": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/svelte": "^4.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "20.11.30",
    "@types/ramda": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vercel/style-guide": "^6.0.0",
    "@vite-pwa/sveltekit": "^0.4.0",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-vitest": "^0.3.26",
    "jsdom": "^24.0.0",
    "postcss": "8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.8",
    "tailwindcss": "3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.6",
    "vite-plugin-tailwind-purgecss": "0.2.0",
    "vitest": "^1.4.0",
    "zod": "^3.22.4"
  },
  "type": "module",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "immer": "^10.0.4",
    "nanoid": "^5.0.6",
    "ramda": "^0.29.1",
    "redaxios": "^0.5.1"
  }
}
