{
  "name": "jbcb-championship",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:emulator": "export FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 && vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "test": "vitest",
    "test:watch": "export CI=false && vitest --watch=true",
    "test:ui": "vitest --ui --watch=true --coverage.enabled=true",
    "test:coverage": "vitest --coverage",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod",
    "firestore": "firebase emulators:start --import ./data --export-on-exit ./data",
    "firestore:export": "firebase emulators:export ./data",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@skeletonlabs/skeleton": "2.10.1",
    "@skeletonlabs/tw-plugin": "0.4.0",
    "@sveltejs/adapter-auto": "^3.2.2",
    "@sveltejs/kit": "^2.5.18",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "0.5.13",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/svelte": "^5.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "20.14.10",
    "@types/ramda": "^0.30.1",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vercel/style-guide": "^6.0.0",
    "@vite-pwa/sveltekit": "^0.6.0",
    "@vitest/coverage-v8": "^2.0.2",
    "@vitest/ui": "^2.0.2",
    "autoprefixer": "10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^2.42.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vitest": "^0.4.1",
    "firebase-admin": "^12.2.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "postcss": "8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "tailwindcss": "3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-tailwind-purgecss": "0.3.3",
    "vitest": "^2.0.2",
    "zod": "^3.23.8"
  },
  "type": "module",
  "dependencies": {
    "axios": "^1.7.2",
    "immer": "^10.1.1",
    "nanoid": "^5.0.7",
    "ramda": "^0.30.1"
  }
}
